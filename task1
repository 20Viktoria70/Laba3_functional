# Незмінне оновлення елементів списку (Haskell)
# Напишіть функцію updateAt, яка повертає новий список, де елемент на вказаній позиції замінено на нове значення. Вхідний список не змінюється. Якщо індекс виходить за межі списку, повертається початковий список.
# updateAt :: Int -> a -> [a] -> [a]

main :: IO ()
main = do
    putStrLn "Введіть список чисел через пробіл:"
    input <- getLine
    let nums = map read (words input) :: [Int]

    putStrLn "Введіть індекс для оновлення:"
    idx <- readLn

    putStrLn "Введіть нове значення:"
    val <- readLn

    let result = updateAt idx val nums
    putStrLn ("Оновлений список: " ++ show result)
