# Видалення елемента з незмінного списку (Haskell)
# Напишіть функцію removeAt, яка повертає новий список без елемента за заданим індексом. 
# Якщо індекс виходить за межі, повертається початковий список.
# removeAt :: Int -> [a] -> [a]

main :: IO ()
main = do
    putStrLn "Введіть список чисел через пробіл:"
    input <- getLine
    let nums = map read (words input) :: [Int]

    putStrLn "Введіть індекс для видалення:"
    idx <- readLn

    let result = removeAt idx nums
    putStrLn ("Новий список: " ++ show result)
